    var socialList = [
        {
            label: 'Ссылка на youtube',
            icon: './img/sprite.svg#icon-youtube'
        }, {
            label: 'Ссылка на vk',
            icon: './img/sprite.svg#icon-vk'
        }, {
            label: 'Ссылка на rutube',
            icon: './img/sprite.svg#icon-rutube'
        }, {
            label: 'Ссылка на ok',
            icon: './img/sprite.svg#icon-ok'
        }
    ]

    var mainMenu =  {
        classMenu: 'main-menu',
        classMenuItem: 'main-menu__item',
        classMenuLink: 'main-menu__link',
        items: [
            {
                name: 'новости',
                link: '#'
            }, {
